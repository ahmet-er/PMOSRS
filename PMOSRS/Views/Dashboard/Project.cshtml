@{
	ViewData["Title"] = "Project";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div id="toolbar">
	<button id="idAddBtn" class="btn btn-primary">Ekle</button>
	<button id="idEditBtn" class="btn btn-primary">Güncelle</button>
	<button id="idDeleteBtn" class="btn btn-danger">Sil</button>
	<button id="button" class="btn btn-secondary">getSelection</button>

</div>



<table id="table"
	   data-toggle="table"
	   data-toolbar="#toolbar"
	   data-height="460"
	   data-search="true"
	   data-click-to-select="true"
	   data-url="https://localhost:5001/API/Project/List">
	<thead>
		<tr>
			<th data-field="state" data-checkbox="true"></th>
			<th data-field="id">ID</th>
			<th data-field="name">Proje Adı</th>
			<th data-field="price">Proje Açıklama</th>
		</tr>
	</thead>
</table>


<script>
	var $table = $('#idProjectTable')
	var $button = $('#button')

	$(function() {
		$button.click(function() {
			alert('getSelections: ' + JSON.stringify($table.bootstrapTable('getSelections')))
		})
	})
</script>

